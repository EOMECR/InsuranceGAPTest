@model MVCSolution.Models.PolicyCustomer

@{
    ViewData["Title"] = "Create";
}

<h1>Create new coverage for customer</h1>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="CustomerId" class="control-label"></label>
                <div>
                    @Html.DropDownList("CustomerId", (IEnumerable<SelectListItem>)ViewBag.Customers)
                </div>
                <span asp-validation-for="CustomerId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PolicyID" class="control-label"></label>
                <div>
                    @Html.DropDownList("PolicyID", (IEnumerable<SelectListItem>)ViewBag.Policies)
                </div>
                <span asp-validation-for="PolicyID" class="text-danger"></span>
            </div>           
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
